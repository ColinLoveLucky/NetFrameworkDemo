            resizable: false,
            width: "30%",
            modal: true,
            draggable: false,
            close: function (event, ui) {
                //重新加载列表
                $("#qlist-grid-list").jqGrid('setGridParam').trigger("reloadGrid");
            }
        });
    }

    //调整额度
