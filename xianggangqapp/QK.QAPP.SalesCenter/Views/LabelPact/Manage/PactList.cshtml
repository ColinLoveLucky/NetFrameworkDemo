    /*加载jqGrid */
    function LoadGrid(grid_selector, _colNames, _colModel, _pager, _postData, multiselect) {
        jQuery(grid_selector).jqGrid({
            url: "/Pact/GetPactList",
            datatype: "json",
            mtype: "POST",
            height: jQuery(window).height() - 335,
            width: jQuery('.tab-content').width()+350,
            colNames: _colNames,
            colModel: _colModel,
            postData: _postData,
            jsonReader: {
                root: "DataList",
                total: "TotalCount",
                page: "CurrentPage",
                records: "TotalRecords",
                repeatitems: false
            },

            viewrecords: true,
            rowNum: 20,
            rowList: [10, 20, 30],
            pager: _pager,
            onSortCol: function (colName, iCol, sortorder) {
                sortIndex = colName;
                sortOrder = sortorder;
