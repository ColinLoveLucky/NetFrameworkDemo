                resizable: false,
                width: '95%',
                title: "<h4 class='smaller'><i class='icon-ok'></i> 签署文件</h4>",
                title_html: true,
                modal: true,
                draggable: false,
                close:
                    function () {
                        /*如果是ADD或者Edit，关闭窗口时刷新缩略图*/
                        if (edit) {
