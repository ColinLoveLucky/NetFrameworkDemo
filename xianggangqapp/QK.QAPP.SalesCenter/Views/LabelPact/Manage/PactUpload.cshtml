                                fileSum = fileSum + 1;
                                imgName = value.P_MANUAL_FINAL.FILE_TITLE + "." + value.P_MANUAL_FINAL.FILE_TYPE;
                                if (value.P_MANUAL_FINAL.FILE_TYPE.toUpperCase() == "PDF") {
                                    /*修改为本地图片，加快图片加载效率*/
                                    var img = '<img src="../Content/images/pdf.png" title="' + imgName + '" /><br />';
                                }
