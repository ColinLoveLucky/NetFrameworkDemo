                                fileSum = fileSum + 1;
                                imgName = value.E_MANUAL_FINAL.FILE_TITLE + "." + value.E_MANUAL_FINAL.FILE_TYPE;
                                if (value.E_MANUAL_FINAL.FILE_TYPE.toUpperCase() == "PDF") {
